{
  "name": "cocktailjs",
  "version": "0.0.1",
  "description": "Glass icons and normalization utilities for Smartender",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "files": [
    "dist",
    "assets",
    "src"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "pnpm install",
    "build:ui": "pnpm --filter ./packages/cocktail-ui... run build",
    "build:root": "echo \"skip root build (esbuild-only workspace)\"",
    "build": "pnpm run build:ui && pnpm run build:root",
    "dev:ui": "pnpm --filter ./packages/cocktail-ui... run dev || echo \"no dev script for cocktail-ui\"",
    "dev": "sh -c \"node server.js & node -r @babel/register scripts/watch-and-render.js\"",
    "dev:with-playground": "sh -c \"node server.js & node -r @babel/register scripts/watch-and-render.js & pnpm --filter ./packages/cocktailjs-react... run dev\"",
    "render:svgs": "node scripts/render-components-to-svgs.cjs",
    "sync:liquid": "node scripts/sync-liquid.js",
    "sync:liquid:watch": "node scripts/sync-liquid.js --watch",
    "sync:assets": "node scripts/sync-assets.js",
    "sync:assets:watch": "node scripts/sync-assets.js --watch",
    "export:react": "node scripts/export-to-cocktailjs-react.js",
    "check:svgs": "node scripts/check-manifest-svgs.js",
    "start": "node server.js"
  },
  "license": "MIT",
  "devDependencies": {
    "express": "^4.18.2",
    "@babel/register": "^7.22.5",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1",
    "http-proxy-middleware": "^2.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
