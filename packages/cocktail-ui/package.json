{
  "name": "@bace51/cocktailui",
  "version": "0.1.0",
  "description": "UI utilities and components for CocktailJS",
  "keywords": [
    "cocktail",
    "ui",
    "cocktailjs"
  ],
  "homepage": "https://github.com/brionace/cocktailjs#readme",
  "bugs": {
    "url": "https://github.com/brionace/cocktailjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brionace/cocktailjs.git"
  },
  "license": "MIT",
  "author": "brionace",
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:cjs": "esbuild index.js --bundle --platform=node --outfile=dist/index.cjs.js --format=cjs --sourcemap",
    "build:esm": "esbuild index.js --bundle --platform=node --outfile=dist/index.esm.js --format=esm --sourcemap",
    "build": "npm run build:cjs && npm run build:esm",
    "prepare": "node ../../scripts/export-svgs-to-package.js",
    "prepublishOnly": "npm run prepare && npm run build",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "rollup": "^4.55.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "svgo": "^3.0.0",
    "svgson": "^5.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.7"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/index.esm.js"
}
