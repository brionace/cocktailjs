{
  "name": "@cocktailjs/cocktail-ui",
  "version": "0.1.0",
  "description": "UI utilities and components for CocktailJS",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:cjs": "esbuild index.js --bundle --platform=node --outfile=dist/index.cjs.js --format=cjs --sourcemap",
    "build:esm": "esbuild index.js --bundle --platform=node --outfile=dist/index.esm.js --format=esm --sourcemap",
    "build": "npm run build:cjs && npm run build:esm",
    "prepare": "node ../../scripts/export-svgs-to-package.js",
    "prepublishOnly": "npm run prepare && npm run build",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "cocktail",
    "ui",
    "cocktailjs"
  ],
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/brionace/cocktailjs.git"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "svgo": "^3.0.0",
    "svgson": "^5.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.7"
  }
}
