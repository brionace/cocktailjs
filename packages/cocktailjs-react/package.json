{
  "name": "@bace51/cocktailjs-react",
  "version": "0.1.0",
  "private": false,
  "description": "Lightweight React components for rendering cocktail glasses and liquids as SVG.",
  "keywords": [
    "cocktail",
    "cocktails",
    "react",
    "svg",
    "liquid"
  ],
  "homepage": "https://github.com/brionace/cocktailjs#readme",
  "bugs": {
    "url": "https://github.com/brionace/cocktailjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brionace/cocktailjs.git",
    "directory": "packages/cocktailjs-react"
  },
  "license": "MIT",
  "author": "",
  "type": "commonjs",
  "main": "dist/index.cjs.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=dist/index.mjs --format=esm --platform=browser --minify",
    "build:cjs": "esbuild src/index.js --bundle --outfile=dist/index.cjs.js --format=cjs --platform=node",
    "prepare": "pnpm run build && pnpm run build:cjs",
    "dev": "vite --config playground/vite.config.js",
    "dev:dist": "USE_DIST=1 vite --config playground/vite.config.js"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "vite": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18"
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/index.mjs"
}
